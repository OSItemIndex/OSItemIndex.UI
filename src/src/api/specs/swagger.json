{
  "swagger": "2.0",
  "info": {
    "title": "OSItemIndex.API",
    "version": "v1"
  },
  "paths": {
    "/items": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "GET all items in the database",
        "operationId": "GetItemsQuery",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "Name",
            "type": "string"
          },
          {
            "in": "query",
            "name": "Duplicate",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "Noted",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "Placeholder",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "Stackable",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "TradeableOnGe",
            "type": "boolean"
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved an array of all item information from the database",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OsrsBoxItem"
              }
            }
          }
        }
      }
    },
    "/items/simple": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "GET all items in the database but only include simple fields",
        "description": "test",
        "operationId": "GetItemsSimpleQuery",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "Name",
            "type": "string"
          },
          {
            "in": "query",
            "name": "Duplicate",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "Noted",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "Placeholder",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "Stackable",
            "type": "boolean"
          },
          {
            "in": "query",
            "name": "TradeableOnGe",
            "type": "boolean"
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved an array of simplified item information from the database",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OsrsBoxItem"
              }
            }
          }
        }
      }
    },
    "/items/{id}": {
      "get": {
        "tags": [
          "Items"
        ],
        "summary": "GET an item by an Item ID",
        "operationId": "GetItemById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "integer",
            "format": "int32",
            "maximum": 2147483647,
            "minimum": 0
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved a specific item by ID",
            "schema": {
              "$ref": "#/definitions/OsrsBoxItem"
            }
          }
        }
      }
    },
    "/version": {
      "get": {
        "tags": [
          "Version"
        ],
        "summary": "Retrieve the internal versioning information of the database",
        "operationId": "GetVersion",
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "responses": {
          "200": {
            "description": "Retrieved latest version in the database",
            "schema": {
              "$ref": "#/definitions/VersionInfo"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "OsrsBoxItem": {
      "type": "object",
      "properties": {
        "id": {
          "format": "int32",
          "description": "Unique OSRS item ID number.",
          "type": "integer"
        },
        "name": {
          "description": "The name of the item.",
          "type": "string"
        },
        "duplicate": {
          "description": "If the item is a duplicate.",
          "type": "boolean"
        },
        "noted": {
          "description": "If the item is noted.",
          "type": "boolean"
        },
        "placeholder": {
          "description": "If the item is a placeholder.",
          "type": "boolean"
        },
        "stackable": {
          "description": "If the item is stackable (in inventory).",
          "type": "boolean"
        },
        "tradeable_on_ge": {
          "description": "If the item is tradeable (only on GE).",
          "type": "boolean"
        },
        "last_updated": {
          "format": "date-time",
          "description": "The last time (UTC) the item was updated (in ISO8601 date format).",
          "type": "string"
        },
        "document": {
          "description": "OSRSBox item document.",
          "type": "string"
        }
      }
    },
    "VersionInfo": {
      "type": "object"
    }
  }
}